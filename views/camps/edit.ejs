<%- include("../partials/top") %>

<h1>Add Camp</h1>

<form action="/camps/<%= camp._id %>?_method=PUT" method="POST" enctype="multipart/form-data">

    <label for="name">CAMP NAME</label>
    <input type="text" name="name" id="name" value="<%= camp.name %> ">
    <br>
    <label for="image">CAMP IMAGE</label>
    <input type="file" name="campImg" id="image">
    <br>
    <label for="description">DESCRIPTION</label> <br>
    <textarea name="description" id="description" cols="50" rows="5"><%= camp.description %> </textarea>
    <br>
    <input type="submit" value="Submit">


</form>

<%- include("../partials/bottom") %>